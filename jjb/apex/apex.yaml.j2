          description: "Scenario to deploy with."
      - string:
          name: ARTIFACT_VERSION
          default: dev
          description: "Used for overriding the ARTIFACT_VERSION"

    properties:
      - logrotate-default
      - build-blocker:
          use-build-blocker: true
          block-level: 'NODE'
          blocking-jobs:
            - 'apex-runner.*'
            - 'apex-.*-promote.*'
            - 'apex-run.*'
            - 'apex-virtual-.*'
            - 'apex-verify-gate-.*'
      - throttle:
          max-per-node: 1
          max-total: 10
          option: 'project'

    builders:
      - description-setter:
          description: "Deployed on $NODE_NAME - Scenario: $DEPLOY_SCENARIO"
      - multijob:
          name: deploy-virtual
          condition: SUCCESSFUL
