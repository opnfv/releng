                  predefined-parameters:
                    DEPLOY_SCENARIO=$DEPLOY_SCENARIO
                  kill-phase-on: NEVER
                  abort-all-job: false
                  git-revision: false
        - multijob:
            name: Yardstick
            condition: ALWAYS
            projects:
                - name: 'yardstick-apex-baremetal-daily-{scenario_stream}'
                  node-parameters: true
                  current-parameters: false
                  predefined-parameters:
                    DEPLOY_SCENARIO=$DEPLOY_SCENARIO
