# Deploy job
- job-template:
    name: 'apex-deploy-{platform}-{stream}'

    node: 'apex-{platform}-{stream}'

    concurrent: true

    disabled: false
    quiet-period: 30
    scm:
        - git-scm-gerrit

    wrappers:
        - timeout:
            timeout: 140
            fail: true

    parameters:
        - '{project}-{platform}-{stream}-defaults'
        - project-parameter:
            project: '{project}'
            branch: '{branch}'
        - apex-parameter:
            gs-pathname: '{gs-pathname}'
